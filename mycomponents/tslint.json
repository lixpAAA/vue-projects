{
  "defaultSeverity": "warning",
  "no-console": false,
  "no-empty": true,
  "member-access": {
    "options": [
      "check-accessor",
      "check-constructor",
      "check-parameter-property"
    ]
  },
  "prefer-readonly": false,
  // "extends": [
  //   "tslint:recommended"
  // ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      false,
      "always"
    ],
    "trailing-comma": [
      false,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ]
  }
}